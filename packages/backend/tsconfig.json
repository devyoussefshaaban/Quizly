{
  "compilerOptions": {
    "target": "es2020", /* Specify ECMAScript target version */
    "module": "commonjs", /* Specify module code generation */
    "esModuleInterop": true, /* Enables compatibility for default imports */
    "forceConsistentCasingInFileNames": true,
    "strict": true, /* Enable all strict type-checking options */
    "skipLibCheck": true,
    "outDir": "./dist", /* Redirect output structure to the dist directory */
    "rootDir": "./" /* Specify the root directory of source files */
  },
  "include": [
    "**/*"
  ], /* Include only files in the src directory */
  "exclude": [
    "dist",
    "node_modules"
  ]
}